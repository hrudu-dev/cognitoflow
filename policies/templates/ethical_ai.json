{
  "policy_id": "ethical_ai_001",
  "name": "Ethical AI Use Policy",
  "version": "1.0",
  "description": "Ensures fair and unbiased AI model outputs for B2B applications",
  "rules": [
    {
      "rule_id": "bias_detection",
      "type": "fairness_check",
      "action": "flag",
      "conditions": {
        "protected_attributes": ["gender", "race", "age"],
        "bias_threshold": 0.1,
        "fairness_metrics": ["demographic_parity", "equalized_odds"]
      },
      "enforcement": "post_processing"
    },
    {
      "rule_id": "explainability",
      "type": "transparency",
      "action": "require",
      "conditions": {
        "explanation_method": "SHAP",
        "confidence_threshold": 0.7
      },
      "enforcement": "real_time"
    },
    {
      "rule_id": "human_oversight",
      "type": "governance",
      "action": "escalate",
      "conditions": {
        "high_risk_decisions": true,
        "approval_required": true
      },
      "enforcement": "pre_decision"
    }
  ],
  "compliance_frameworks": ["EU_AI_Act", "NIST_AI_RMF"],
  "audit_required": true,
  "created_by": "system",
  "created_date": "2024-01-15T00:00:00Z"
}